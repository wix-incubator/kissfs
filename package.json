{
  "name": "kissfs",
  "version": "0.3.1",
  "description": "Extensible and reactive file-system library that keeps it simple",
  "main": "dist/src/nodejs.js",
  "types": "dist/src/nodejs.d.ts",
  "browser": "dist/src/browser.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "tsc",
    "bundle": "webpack",
    "pretest": "yarn run clean && yarn run build && yarn run bundle",
    "test": "yarn run test:node && yarn run test:browser",
    "test:node": "mocha --require test-setup.js --reporter mocha-env-reporter --timeout 4000 dist/test/nodejs",
    "test:browser": "karma start --single-run",
    "start": "webpack-dev-server --progress",
    "reset": "yarn run clean && rimraf ./node_modules && yarn && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:wix/kissfs.git"
  },
  "keywords": [
    "file",
    "folder",
    "abstraction",
    "watch"
  ],
  "author": "Amir Arad (amira@wix.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wix/kissfs/issues"
  },
  "homepage": "https://github.com/wix/kissfs#readme",
  "dependencies": {
    "autobahn": "^17.5.2",
    "chokidar": "^1.7.0",
    "eventemitter3": "^2.0.3",
    "fs-extra": "^4.0.2",
    "is-glob": "^4.0.0",
    "klaw": "^2.1.0",
    "micromatch": "^2.3.11",
    "tslib": "^1.7.1",
    "wamp-server": "^0.0.6"
  },
  "devDependencies": {
    "@types/autobahn": "^0.9.37",
    "@types/chai": "^4.0.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/chai-subset": "^1.3.1",
    "@types/chokidar": "^1.7.3",
    "@types/fs-extra": "^4.0.2",
    "@types/klaw": "^1.3.2",
    "@types/lodash": "^4.14.76",
    "@types/micromatch": "^2.3.29",
    "@types/mocha": "^2.2.43",
    "@types/node": "^8.0.31",
    "@types/sinon": "^2.3.5",
    "@types/sinon-chai": "^2.7.29",
    "@types/tmp": "^0.0.33",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-env-reporter": "^1.0.13",
    "karma-firefox-launcher": "^1.0.1",
    "karma-ie-launcher": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.5.3",
    "mocha-env-reporter": "^3.0.0",
    "mocha-loader": "^1.1.1",
    "rimraf": "^2.6.2",
    "sinon": "^4.0.0",
    "sinon-chai": "^2.14.0",
    "source-map-support": "^0.4.18",
    "tmp": "^0.0.33",
    "ts-loader": "^2.3.7",
    "ts-node": "^3.3.0",
    "typescript": "~2.5.2",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.8.2"
  },
  "optionalDependencies": {
    "bufferutil": "^1.0.0",
    "utf-8-validate": "^2.0.0"
  }
}
